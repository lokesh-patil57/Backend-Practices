<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>USERS</title>
    <style>
        table , td , th {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>id</th>
            <th>email</th>
            <th>username</th>
        </tr>
        <% for (const user of users) { %>
            <tr>
                <td><%= user.uid %></td>
                <td><%= user.email %></td>
                <td><%= user.username %></td>
                <td>
                    <form method="get" action="/user/<%= user.uid %>/edit">
                        <button>edit username</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </table>
</body>
</html>

